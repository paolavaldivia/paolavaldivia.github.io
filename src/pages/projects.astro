---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: "PAOHvis",
    description: "Interactive visualization tool for exploring hypergraphs and multivariate networks. Features node-link diagrams with advanced clustering and filtering capabilities.",
    image: "/img/paohvis.png",
    links: [
      { label: "Demo", url: "/paoh/", icon: "/img/demo.png" },
      { label: "GitHub", url: "https://github.com/paolavaldivia/PAOHvis", icon: "/img/github.png" }
    ]
  },
  {
    title: "Game of Thrones Network Analysis",
    description: "Network visualization of character interactions in Game of Thrones using PAOHvis. Demonstrates hypergraph visualization with emoji-based node representations.",
    image: "/img/got_battles_paohvis_emojis.png",
    links: [
      { label: "Demo", url: "/paoh/", icon: "/img/demo.png" }
    ]
  },
  {
    title: "Hypergraph Visualization (HyperNet)",
    description: "Research project on effective visualization techniques for hypergraphs. Explores different visual encodings and interaction methods for complex network structures.",
    image: "/img/pubs/hyper.png",
    links: [
      { label: "Paper", url: "/files/Hypenet_EuroVis17.pdf", icon: "/img/pdf.png" },
      { label: "Poster", url: "/files/Poster-DcPairs-EuroVis17.pdf", icon: "/img/Keynote-icon.png" }
    ]
  },
  {
    title: "Dynamic Network Visualization",
    description: "Interactive tools for visualizing and analyzing temporal networks. Features timeline-based interaction and dynamic graph layouts.",
    image: "/img/dyn_wav_ui.png",
    links: []
  },
  {
    title: "Matrix Visualization (The Vistorian)",
    description: "Contribution to The Vistorian project - a web-based visualization tool for multivariate dynamic networks using matrix representations.",
    image: "/img/matrix_vistorian.png",
    links: [
      { label: "External", url: "https://vistorian.net", icon: "/img/external.png" }
    ]
  }
];
---

<BaseLayout title="Projects - Paola Valdivia" description="Research projects and visualization tools">
  <div class="container">
    <h1>Projects</h1>
    <p class="page-intro">
      A collection of research projects, visualization tools, and interactive demonstrations
      focused on network analysis, hypergraph visualization, and visual analytics.
    </p>

    <div class="projects-grid">
      {projects.map(project => (
        <article class="project-card">
          <div class="project-image">
            <img src={project.image} alt={project.title} />
          </div>
          <div class="project-content">
            <h2>{project.title}</h2>
            <p>{project.description}</p>
            {project.links.length > 0 && (
              <div class="project-links">
                {project.links.map(link => (
                  <a href={link.url} class="project-link" target={link.url.startsWith('http') ? '_blank' : undefined} rel={link.url.startsWith('http') ? 'noopener' : undefined}>
                    <img src={link.icon} alt="" />
                    <span>{link.label}</span>
                  </a>
                ))}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  h1 {
    margin-bottom: 1rem;
  }

  .page-intro {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 3rem;
    max-width: 800px;
  }

  .projects-grid {
    display: grid;
    gap: 3rem;
  }

  .project-card {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 2rem;
    background-color: #fff;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 3px 3px 8px rgba(0,0,0,0.12);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 16px rgba(0,0,0,0.15);
  }

  .project-image {
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 4px;
  }

  .project-content {
    padding: 2rem 2rem 2rem 0;
  }

  .project-content h2 {
    margin-bottom: 1rem;
    color: var(--green);
  }

  .project-content p {
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: white;
    border: 1px solid #c8c4be;
    border-radius: 4px;
    text-decoration: none;
    color: var(--green);
    -webkit-text-fill-color: var(--green);
    background-image: none;
    transition: all 0.3s;
  }

  .project-link:hover {
    background-color: var(--green);
    color: #fff;
    -webkit-text-fill-color: #fff;
    border-color: var(--green);
    background-image: none;
    opacity: 1;
  }

  .project-link img {
    width: 20px;
    height: 20px;
    object-fit: contain;
  }

  @media (max-width: 968px) {
    .project-card {
      grid-template-columns: 1fr;
    }

    .project-image {
      min-height: 250px;
    }

    .project-content {
      padding: 2rem;
    }
  }
</style>
