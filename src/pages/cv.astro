---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="CV - Paola Valdivia" description="Curriculum Vitae">
  <div class="container">
    <div class="cv-header">
      <h1>Curriculum Vitae</h1>
      <a href="/files/PaolaValdivia_CV.pdf" class="download-btn" download>
        <img src="/img/curriculum-vitae.png" alt="" />
        Download PDF
      </a>
    </div>

    <div class="cv-viewer">
      <iframe src="/files/PaolaValdivia_CV.pdf" title="Paola Valdivia CV"></iframe>
    </div>

    <div class="cv-footer">
      <p>
        You can also view my complete academic profile on
        <a href="http://lattes.cnpq.br/" target="_blank" rel="noopener">Lattes Platform</a>.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .cv-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  h1 {
    margin-bottom: 0;
  }

  .download-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background-color: var(--green);
    color: #fff;
    -webkit-text-fill-color: #fff;
    background-image: none;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 400;
    transition: all 0.3s;
  }

  .download-btn:hover {
    background-color: #0d5238;
    background-image: none;
    -webkit-text-fill-color: #fff;
    opacity: 1;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
  }

  .download-btn img {
    width: 24px;
    height: 24px;
    filter: brightness(0) invert(1);
  }

  .cv-viewer {
    background-color: var(--content-bg);
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  iframe {
    width: 100%;
    height: 80vh;
    min-height: 600px;
    border: none;
    border-radius: 4px;
    background-color: white;
  }

  .cv-footer {
    margin-top: 2rem;
    text-align: center;
    padding: 2rem;
    background-color: var(--content-bg);
    border-radius: 8px;
  }

  .cv-footer a {
    color: var(--terracotta);
    font-weight: 400;
  }

  .cv-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .cv-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    iframe {
      height: 70vh;
      min-height: 500px;
    }
  }
</style>
